<%= form_for(@apply) do |f| %>
    <% if @apply.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@apply.errors.count, "error") %> prohibited this apply from being saved:</h2>

          <ul>
            <% @apply.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "贷款总额" %>
      <%= f.number_field :amount %>
    </div>
    <div class="field">
      <%= f.label :currency %>
      <%= f.number_field :currency %>
    </div>
    <div class="field">
      <%= f.label :loanType %>
      <%= f.number_field :loanType %>
    </div>
    <div class="field">
      <%= f.label :repaymentType %>
      <%= f.number_field :repaymentType %>
    </div>
    <div class="field">
      <%= f.label :term %>
      <%= f.number_field :term, in: 1...4 %>
    </div>
    <div class="field">
      <%= f.label :usePath %>
      <%= f.text_area :usePath %>
    </div>
    <div class="field">
      <%= f.label :startDate %>
      <%= f.date_select :startDate %>
    </div>
    <div class="field">
      <%= f.label :endDate  %>
      <%= f.date_select :endDate %>
    </div>
    <div class="field">
      <%= f.label :processor  %>
      <%= f.number_field :processor %>
    </div>
    <div class="field">
      <%= f.label :proposer  %>
      <%= f.number_field :proposer %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>