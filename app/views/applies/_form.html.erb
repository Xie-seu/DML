<%= simple_form_for @apply, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :loanType %>
  <%= f.input :term %>
  <%= f.input :usePath %>
  <%= f.input :amount %>
  <%= f.input :currency %>
  <%= f.input :startDate %>
  <%= f.input :endDate %>
  <%= f.input :repaymentType %>
  <%= f.input :processor %>
  <%= f.select :business_partner_id, BusinessPartner.all.map{ |c| [c.name, c.id ]} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applies_path, :class => 'btn' %>
  </div>
<% end %>
